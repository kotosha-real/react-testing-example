.input {
    position: relative;

    &__label {
        position: absolute;
        top: 0;
        transform: translate(12px, -50%);
        padding: 0 8px;
        background-color: var(--color-background-primary);
    }

    &__field {
        width: 100%;
        padding: 12px 16px 8px;
        border: 2px solid var(--color-accent);
        border-radius: 16px;
        background-color: var(--color-background-primary);
    }
}
